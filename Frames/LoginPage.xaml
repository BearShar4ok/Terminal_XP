<Page x:Class="Terminal_XP.Frames.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Terminal_XP.Frames"
      mc:Ignorable="d"
      Title="LoginPage"
      Focusable="False">
    <Page.CommandBindings>
        <CommandBinding Command="{x:Static local:LoginPage.OpenHuckPageCommand}" 
                     Executed="OpenHuckPage"/>
    </Page.CommandBindings>
    <Grid x:Name="Main">
        <Label x:Name="LblLogin" HorizontalAlignment="Left" Content="Login:" Background="Transparent" BorderThickness="0" Focusable="False" />
        <TextBox x:Name="TBLogin" HorizontalAlignment="Left" Background="Transparent" BorderThickness="0" VerticalContentAlignment="Center" />
        
        <Label x:Name="LblPassword" HorizontalAlignment="Left" Content="Password:" Background="Transparent" BorderThickness="0" Focusable="False" />
        <TextBox x:Name="TBPassword" HorizontalAlignment="Left" Background="Transparent" BorderThickness="0" VerticalContentAlignment="Center" />
    </Grid>
</Page>
