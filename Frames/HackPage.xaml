<Page x:Class="Terminal_XP.Frames.HackPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Terminal_XP.Frames"
      mc:Ignorable="d"
      Title="HackPage">
    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>

        <RichTextBox Focusable="False" x:Name="LeftRTB" Grid.Column="0" IsReadOnly="True" BorderBrush="Transparent" Background="Transparent">
            <FlowDocument Focusable="False" PageWidth="{Binding ElementName=LeftRTB, Path=ActualWidth}">
                <Paragraph Focusable="False" Name="leftP" BorderBrush="White" />
            </FlowDocument>
        </RichTextBox>

        <Grid Margin="10 0 0 0" Focusable="False" x:Name="Output" Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
    </Grid>
</Page>
