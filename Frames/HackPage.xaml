<Page x:Class="Terminal_XP.Frames.HackPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Terminal_XP.Frames"
      mc:Ignorable="d"
      Title="HackPage">
    <Grid>
        <Grid x:Name="MainGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.1*"/>
                <RowDefinition/>
                <RowDefinition Height="0.05*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.7*"/>
                <ColumnDefinition Width="0.5*"/>
            </Grid.ColumnDefinitions>

            <RichTextBox x:Name="leftRTB" Grid.Column="0" Grid.Row="1" IsReadOnly="True" BorderBrush="White" Width="1000">
                <FlowDocument PageWidth="{Binding ElementName=leftRTB, Path=ActualWidth}">
                    <Paragraph Name="leftP" BorderBrush="White">
                    </Paragraph>
                </FlowDocument>
            </RichTextBox>

            <Grid x:Name="Output" Grid.Row="1" Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
        </Grid>
    </Grid>
</Page>
