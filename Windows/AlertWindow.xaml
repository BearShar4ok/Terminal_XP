<Window x:Class="Terminal_XP.Windows.AlertWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Terminal_XP.Windows"
        mc:Ignorable="d"
        WindowStyle="None"
        Title="AlertWindow" Height="150" Width="250">
    <Border BorderThickness="2" BorderBrush="Red">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="20*"/>
                <RowDefinition Height="55*"/>
                <RowDefinition Height="25*"/>
            </Grid.RowDefinitions>
            <TextBox x:Name="titleTextBox" Grid.Row="0" Text="Title"  FontSize="20" />
            <TextBox x:Name="textTextBox" Grid.Row="1" Text="Title"  FontSize="20" />
            <Button x:Name="reseltButton" Grid.Row="2" Content="Button" Width="80" Margin="0,0,0,5">

            </Button>
        </Grid>
    </Border>
</Window>
